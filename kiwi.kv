MDScreenManager:
    LoginScreen:

<LoginScreen>:
    name: "login"

    MDFloatLayout:

        MDLabel:
            text: "Login"
            font_style: "H4"
            halign: "center"
            pos_hint: {"center_y": 0.8}

        MDTextField:
            id: email
            hint_text: "E-mail"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint_x: 0.8
            icon_right: "email"
            mode: "rectangle"

        MDTextField:
            id: password
            hint_text: "Senha"
            password: True
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: 0.8
            icon_right: "eye-off"
            mode: "rectangle"

        MDRaisedButton:
            text: "Entrar"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            size_hint_x: 0.5
            on_release: app.login()
